      "module": "meshtastic",
      "justMyCode": false,
      "args": ["--debug", "--ble", "--device", "24:62:AB:DD:DF:3A"]
    },
    {
      "name": "meshtastic info",
      "type": "python",
      "request": "launch",
      "module": "meshtastic",
